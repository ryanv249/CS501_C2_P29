<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.C2_P29" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="foodStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="calStyle" parent="foodStyle">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">75dp</item>
    </style>

    <style name="inputStyle" parent="foodStyle">
        <item name="android:gravity">left|center</item>
        <item name="android:hint">Enter Amount</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">125dp</item>
    </style>


    <style name="displayStyle" parent="foodStyle">
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>